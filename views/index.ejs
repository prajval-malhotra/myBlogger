<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <h1>Home</h1>
    <%- include('./partials/nav.ejs') %>

    <h2>BLOGS:</h2>
    <div class="blogs">
    <% if(blogs.length > 0){ %>
        <% blogs.forEach(blog => { %>
        <div class="single">
            <a class="single" href="/blogs/<%= blog._id %>">
            <h3><%= blog.title %></h3>
            <p><%= blog.snippet %></p>
        </div>
            </a>
        <% }) %>
    <% } %>
    </div>
</body>
<%- include('./partials/footer.ejs') %>
<script src="app.js"></script>
</html>